<%- include('partials/header') %>

<main class="container mx-auto p-4 md:p-6 lg:p-8">
    <div class="max-w-2xl mx-auto bg-white p-8 rounded-lg shadow-md">
        <div class="flex items-center mb-6">
             <a href="/pgs" class="text-indigo-600 hover:text-indigo-800 mr-4">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" /></svg>
            </a>
            <h1 class="text-3xl font-bold text-slate-800">Edit Property Details</h1>
        </div>
        
        <%- include('partials/messages') %>
        
        <form action="/pgs/<%= pg._id %>?_method=PUT" method="POST" class="space-y-4">
            <div>
                <label for="pg-name" class="block text-sm font-medium text-gray-700">PG Name</label>
                <input type="text" name="name" id="pg-name" value="<%= pg.name %>" required class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
            </div>
            <div>
                <label for="pg-location" class="block text-sm font-medium text-gray-700">Location / Area</label>
                <input type="text" name="location" id="pg-location" value="<%= pg.location %>" required class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
            </div>
            <div>
                <label for="pg-address" class="block text-sm font-medium text-gray-700">Full Address</label>
                <textarea name="address" id="pg-address" rows="3" required class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"><%= pg.address %></textarea>
            </div>
            <button type="submit" class="w-full bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Save Changes</button>
        </form>
    </div>
</main>

<%- include('partials/footer') %>