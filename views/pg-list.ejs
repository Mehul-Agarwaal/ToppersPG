<%- include('partials/header') %>

<main class="container mx-auto p-4 md:p-6 lg:p-8">
    <%- include('partials/messages') %>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <div class="lg:col-span-2">
            <h1 class="text-3xl font-bold text-slate-800 mb-6">My Properties</h1>
            <div class="space-y-4">
                <% if (pgs.length > 0) { %>
                    <% pgs.forEach(pg => { %>
                        <div class="bg-white p-6 rounded-lg shadow-md">
                            <a href="/pgs/<%= pg._id %>" class="block">
                                <h2 class="text-2xl font-bold text-indigo-600 hover:underline"><%= pg.name %></h2>
                                <p class="text-gray-600"><%= pg.location %></p>
                                <p class="text-sm text-gray-500 mt-2"><%= pg.address %></p>
                            </a>
                            <div class="mt-4 pt-4 border-t border-gray-200 flex items-center space-x-4">
                                <a href="/pgs/<%= pg._id %>/edit" class="text-sm font-medium text-blue-600 hover:text-blue-800">Edit</a>
                                <form action="/pgs/<%= pg._id %>?_method=DELETE" method="POST" onsubmit="return confirm('DELETE PG?\n\nThis will permanently delete this PG and ALL of its rooms and residents.\nThis action cannot be undone.');">
                                    <button type="submit" class="text-sm font-medium text-red-600 hover:text-red-800">Delete</button>
                                </form>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="text-center text-gray-500 py-16 border-2 border-dashed border-gray-300 rounded-lg">
                        <h2 class="text-xl font-semibold">No PGs Found</h2>
                        <p class="mt-2">Add your first property using the form on this page.</p>
                    </div>
                <% } %>
            </div>
        </div>
        <div class="lg:col-span-1">
            <div class="bg-white p-6 rounded-lg shadow-md">
                <h2 class="text-xl font-bold mb-4 text-slate-700">Add New PG</h2>
                <form action="/pgs" method="POST" class="space-y-4">
                    <div>
                        <label for="pg-name" class="block text-sm font-medium text-gray-700">PG Name</label>
                        <input type="text" name="name" id="pg-name" value="<%= formData.name || '' %>" required class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
                    </div>
                    <div>
                        <label for="pg-location" class="block text-sm font-medium text-gray-700">Location / Area</label>
                        <input type="text" name="location" id="pg-location" value="<%= formData.location || '' %>" required class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
                    </div>
                    <div>
                        <label for="pg-address" class="block text-sm font-medium text-gray-700">Full Address</label>
                        <textarea name="address" id="pg-address" rows="2" required class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500"><%= formData.address || '' %></textarea>
                    </div>
                    <button type="submit" class="w-full bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700">Add PG</button>
                </form>
            </div>
        </div>
    </div>
</main>

<%- include('partials/footer') %>