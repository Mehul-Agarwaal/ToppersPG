<%- include('partials/header') %>

<main class="container mx-auto p-4 md:p-6 lg:p-8">
    <div class="max-w-4xl mx-auto">
        <div class="mb-6">
            <a href="/residents" class="flex items-center text-indigo-600 hover:text-indigo-800 font-medium">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                Back to All Residents
            </a>
        </div>
        
        <%- include('partials/messages') %>

        <div class="bg-white p-8 rounded-lg shadow-md">
            <div class="flex flex-col md:flex-row items-start space-y-6 md:space-y-0 md:space-x-8">
                <div class="w-full md:w-1/3 flex-shrink-0">
                     <img class="h-64 w-full object-cover rounded-lg shadow-md" src="<%= resident.photo ? resident.photo.url : 'https://placehold.co/400x600/E2E8F0/4A5568?text=Photo' %>" alt="<%= resident.name %>">
                </div>

                <div class="w-full md:w-2/3">
                    <h1 class="text-4xl font-bold text-slate-800"><%= resident.name %></h1>
                    <p class="text-lg text-gray-500 mb-6"><%= resident.occupation %> at <%= resident.workplaceOrCollege %></p>
                    
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-y-4 gap-x-6 text-gray-700">
                        <div>
                            <p class="text-sm font-semibold text-gray-500">Contact Number</p>
                            <p><%= resident.contactNumber %></p>
                        </div>
                        <div>
                            <p class="text-sm font-semibold text-gray-500">Email Address</p>
                            <p><%= resident.email || 'N/A' %></p>
                        </div>
                        <div>
                            <p class="text-sm font-semibold text-gray-500">PG Name</p>
                            <p><%= resident.pg.name %></p>
                        </div>
                        <div>
                            <p class="text-sm font-semibold text-gray-500">Room Number</p>
                            <p><%= resident.room.roomNumber %> (<%= resident.room.occupancyType %>)</p>
                        </div>
                         <div>
                            <p class="text-sm font-semibold text-gray-500">Joining Date</p>
                            <p><%= new Date(resident.joiningDate).toLocaleDateString() %></p>
                        </div>
                        <div>
                            <p class="text-sm font-semibold text-gray-500">Payment Status</p>
                             <% if(resident.paymentStatus === 'Paid') { %>
                                <span class="bg-green-100 text-green-800 text-sm font-medium px-2.5 py-0.5 rounded-full">Paid</span>
                            <% } else { %>
                                <span class="bg-red-100 text-red-800 text-sm font-medium px-2.5 py-0.5 rounded-full">Due</span>
                            <% } %>
                        </div>
                        <div class="col-span-1 sm:col-span-2">
                            <p class="text-sm font-semibold text-gray-500">Permanent Address</p>
                            <p><%= resident.permanentAddress %></p>
                        </div>
                    </div>
                    
                    <% if (resident.idProof && resident.idProof.url) { %>
                        <div class="mt-8">
                            <a href="<%= resident.idProof.url %>" target="_blank" class="inline-flex items-center bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor">
                                  <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
                                  <path fill-rule="evenodd" d="M.458 10C3.732 4.943 9.522 3 10 3s6.268 1.943 9.542 7c-3.274 5.057-9.064 7-9.542 7S3.268 15.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
                                </svg>
                                View Identity Proof
                            </a>
                        </div>
                     <% } %>
                </div>
            </div>

            <div class="border-t border-gray-200 mt-8 pt-6">
                <h2 class="text-2xl font-bold text-slate-700 mb-4">Payment Information</h2>
                <% if (totalPendingAmount > 0) { %>
                    <div class="bg-red-50 border border-red-200 p-4 rounded-lg">
                        <p class="text-lg text-red-800">
                            <span class="font-bold">Amount Due:</span> 
                            â‚¹<%= totalPendingAmount.toLocaleString('en-IN') %> 
                            <span class="text-sm text-red-600">(for <%= pendingMonths %> month/s)</span>
                        </p>
                        <form action="/residents/<%= resident._id %>/pay" method="POST" class="mt-4">
                            <button type="submit" class="w-full md:w-auto bg-green-600 text-white py-2 px-6 rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                                Mark as Paid
                            </button>
                        </form>
                    </div>
                <% } else { %>
                    <div class="bg-green-50 border border-green-200 p-4 rounded-lg">
                        <p class="text-lg font-bold text-green-800">
                            All payments are up to date.
                        </p>
                        <p class="text-sm text-green-700 mt-1">
                            Next payment is due on <%= new Date(resident.paymentDueDate).toLocaleDateString() %>.
                        </p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</main>

<%- include('partials/footer') %>