<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PG Admin Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8fafc;
        }
    </style>
</head>
<body class="antialiased">
    <header class="bg-white shadow-md sticky top-0 z-10">
        <nav class="container mx-auto px-4 md:px-6 py-4">
            <div class="flex justify-between items-center">
                <div class="text-2xl font-bold text-indigo-600">
                    PG Admin
                </div>
                
                <div class="hidden md:flex items-center space-x-4">
                    <a href="/" class="px-3 py-2 rounded-md text-sm font-medium <%= page === 'dashboard' ? 'bg-indigo-100 text-indigo-700' : 'text-gray-700 hover:bg-gray-100' %>">Dashboard</a>
                    <a href="/pgs" class="px-3 py-2 rounded-md text-sm font-medium <%= page === 'pgs' ? 'bg-indigo-100 text-indigo-700' : 'text-gray-700 hover:bg-gray-100' %>">My PGs</a>
                    <a href="/residents" class="px-3 py-2 rounded-md text-sm font-medium <%= page === 'residents' ? 'bg-indigo-100 text-indigo-700' : 'text-gray-700 hover:bg-gray-100' %>">Residents</a>
                    <a href="/auth/logout" class="px-3 py-2 rounded-md text-sm font-medium text-red-600 hover:bg-red-50">Logout</a>
                </div>

                <div class="md:hidden">
                    <button id="menu-btn" type="button" class="text-gray-500 hover:text-gray-800 focus:outline-none focus:text-gray-800">
                        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
                        </svg>
                    </button>
                </div>
            </div>

            <div id="mobile-menu" class="hidden md:hidden mt-4 space-y-2">
                <a href="/" class="block px-3 py-2 rounded-md font-medium <%= page === 'dashboard' ? 'bg-indigo-100 text-indigo-700' : 'text-gray-700 hover:bg-gray-100' %>">Dashboard</a>
                <a href="/pgs" class="block px-3 py-2 rounded-md font-medium <%= page === 'pgs' ? 'bg-indigo-100 text-indigo-700' : 'text-gray-700 hover:bg-gray-100' %>">My PGs</a>
                <a href="/residents" class="block px-3 py-2 rounded-md font-medium <%= page === 'residents' ? 'bg-indigo-100 text-indigo-700' : 'text-gray-700 hover:bg-gray-100' %>">Residents</a>
                <a href="/auth/logout" class="block px-3 py-2 rounded-md font-medium text-red-600 hover:bg-red-50">Logout</a>
            </div>
        </nav>
    </header>

    <script>
        const menuBtn = document.getElementById('menu-btn');
        const mobileMenu = document.getElementById('mobile-menu');
        menuBtn.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });
    </script>