<%- include('partials/header') %>

<main class="container mx-auto p-4 md:p-6 lg:p-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-slate-800">All Residents</h1>
        <a href="/residents/new" class="bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Add New Resident</a>
    </div>

    <%- include('partials/messages') %>

    <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full min-w-max">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="text-left py-3 px-4 font-semibold text-sm text-gray-600 uppercase">Resident</th>
                        <th class="text-left py-3 px-4 font-semibold text-sm text-gray-600 uppercase">Contact</th>
                        <th class="text-left py-3 px-4 font-semibold text-sm text-gray-600 uppercase">PG / Room</th>
                        <th class="text-left py-3 px-4 font-semibold text-sm text-gray-600 uppercase">Payment Status</th>
                        <th class="text-left py-3 px-4 font-semibold text-sm text-gray-600 uppercase">Actions</th>
                    </tr>
                </thead>
                <tbody class="text-gray-700">
                    <% residents.forEach(resident => { %>
                        <tr class="border-b border-gray-200 hover:bg-gray-50">
                            <td class="py-3 px-4">
                                <div class="flex items-center">
                                    <img class="h-10 w-10 rounded-full object-cover mr-4" src="<%= resident.photo ? resident.photo.url : 'https://placehold.co/100x100/E2E8F0/4A5568?text=Photo' %>" alt="<%= resident.name %>">
                                    <div>
                                        <a href="/residents/<%= resident._id %>" class="font-semibold text-indigo-600 hover:text-indigo-800 hover:underline">
                                            <%= resident.name %>
                                        </a>
                                        <p class="text-xs text-gray-500"><%= resident.occupation %></p>
                                    </div>
                                </div>
                            </td>
                            <td class="py-3 px-4">
                                <p><%= resident.contactNumber %></p>
                                <p class="text-xs text-gray-500"><%= resident.email %></p>
                            </td>
                            <td class="py-3 px-4">
                                <p class="font-medium"><%= resident.pg.name %></p>
                                <p class="text-sm text-gray-600">Room: <%= resident.room.roomNumber %></p>
                            </td>
                            <td class="py-3 px-4">
                                <% if(resident.paymentStatus === 'Paid') { %>
                                    <span class="bg-green-100 text-green-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded-full">Paid</span>
                                <% } else if(resident.paymentStatus === 'Due') { %>
                                    <span class="bg-yellow-100 text-yellow-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded-full">Due</span>
                                <% } else { %>
                                    <span class="bg-red-100 text-red-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded-full">Overdue</span>
                                <% } %>
                            </td>
                            <td class="py-3 px-4">
                               <div class="flex items-center space-x-4">
                                    <% if (resident.idProof && resident.idProof.url) { %>
                                        <a href="<%= resident.idProof.url %>" target="_blank" class="text-blue-600 hover:text-blue-900" title="View ID Proof">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                                <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
                                                <path fill-rule="evenodd" d="M.458 10C3.732 4.943 9.522 3 10 3s6.268 1.943 9.542 7c-3.274 5.057-9.064 7-9.542 7S3.268 15.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
                                            </svg>
                                        </a>
                                    <% } %>
                                    <form action="/residents/<%= resident._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this resident? This action cannot be undone.');">
                                        <button type="submit" class="text-red-600 hover:text-red-900" title="Delete Resident">
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                                                <path fill-rule="evenodd" d="M9 2a1 1 0 00-.894.553L7.382 4H4a1 1 0 000 2v10a2 2 0 002 2h8a2 2 0 002-2V6a1 1 0 100-2h-3.382l-.724-1.447A1 1 0 0011 2H9zM7 8a1 1 0 012 0v6a1 1 0 11-2 0V8zm4 0a1 1 0 012 0v6a1 1 0 11-2 0V8z" clip-rule="evenodd" />
                                            </svg>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
    <% if (residents.length === 0) { %>
        <p class="text-center text-gray-500 py-8">No residents found. Add one to get started!</p>
    <% } %>
</main>

<%- include('partials/footer') %>