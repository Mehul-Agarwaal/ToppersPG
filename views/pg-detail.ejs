<%- include('partials/header') %>

<main class="container mx-auto p-4 md:p-6 lg:p-8">
    <div class="mb-6">
        <a href="/pgs" class="flex items-center text-indigo-600 hover:text-indigo-800 font-medium">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" /></svg>
            Back to My PGs
        </a>
    </div>

    <div class="bg-white p-8 rounded-lg shadow-md mb-8">
        <h1 class="text-4xl font-bold text-slate-800"><%= pg.name %></h1>
        <p class="text-lg text-gray-500 mt-2"><%= pg.address %></p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <div class="lg:col-span-2">
            <h2 class="text-2xl font-bold text-slate-700 mb-4">Rooms</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <% if (rooms.length > 0) { %>
                    <% rooms.forEach(room => { %>
                        <div class="bg-white rounded-lg shadow-md flex flex-col">
                            <div class="p-5 flex-grow">
                                <div class="flex justify-between items-start">
                                    <h3 class="text-xl font-bold text-slate-800">Room <%= room.roomNumber %></h3>
                                    <span class="bg-blue-100 text-blue-800 text-sm font-medium px-2.5 py-0.5 rounded-full capitalize"><%= room.occupancyType %></span>
                                </div>
                                <p class="text-gray-600 font-semibold">â‚¹<%= room.rent.toLocaleString('en-IN') %> / month</p>
                                
                                <div class="mt-4 border-t border-gray-200 pt-4">
                                    <h4 class="font-semibold text-gray-700 mb-2">Occupants</h4>
                                    <div class="space-y-3">
                                        <% const capacity = room.occupancyType === 'single' ? 1 : 2; %>
                                        <% for(let i = 0; i < capacity; i++) { %>
                                            <% if (room.residents[i]) { %>
                                                <a href="/residents/<%= room.residents[i]._id %>" class="flex items-center p-2 rounded-lg hover:bg-gray-50">
                                                    <img class="h-10 w-10 rounded-full object-cover mr-3" src="<%= room.residents[i].photo ? room.residents[i].photo.url : 'https://placehold.co/100x100/E2E8F0/4A5568?text=Photo' %>" alt="<%= room.residents[i].name %>">
                                                    <div>
                                                        <p class="font-semibold text-indigo-600"><%= room.residents[i].name %></p>
                                                        <p class="text-xs text-gray-500"><%= room.residents[i].contactNumber %></p>
                                                    </div>
                                                </a>
                                            <% } else { %>
                                                <div class="flex items-center p-2 rounded-lg border-2 border-dashed border-gray-300">
                                                    <div class="h-10 w-10 rounded-full bg-gray-200 flex items-center justify-center mr-3">
                                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" /></svg>
                                                    </div>
                                                    <p class="font-semibold text-gray-500">Vacant Spot</p>
                                                </div>
                                            <% } %>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                            <div class="bg-gray-50 p-3 mt-auto border-t border-gray-200 flex items-center justify-end space-x-4">
                                <a href="/rooms/<%= room._id %>/edit" class="text-sm font-medium text-blue-600 hover:text-blue-800">Edit</a>
                                <form action="/rooms/<%= room._id %>?_method=DELETE" method="POST" onsubmit="return confirm('Are you sure you want to delete this room?');">
                                    <button type="submit" class="text-sm font-medium text-red-600 hover:text-red-800">Delete</button>
                                </form>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="md:col-span-2 text-center text-gray-500 py-16 border-2 border-dashed border-gray-300 rounded-lg">
                        <h2 class="text-xl font-semibold">No Rooms Found</h2>
                        <p class="mt-2">Add the first room to this PG using the form on this page.</p>
                    </div>
                <% } %>
            </div>
        </div>

        <div class="lg:col-span-1">
            <div class="bg-white p-6 rounded-lg shadow-md sticky top-24">
                <h2 class="text-xl font-bold mb-4 text-slate-700">Add New Room</h2>
                <form action="/rooms" method="POST" class="space-y-4">
                    <input type="hidden" name="pg" value="<%= pg._id %>">
                    
                    <div class="grid grid-cols-1 gap-4">
                        <div>
                            <label for="room-number" class="block text-sm font-medium text-gray-700">Room Number</label>
                            <input type="text" name="roomNumber" id="room-number" value="<%= formData.roomNumber || '' %>" required class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
                        </div>
                        <div>
                            <label for="room-rent" class="block text-sm font-medium text-gray-700">Monthly Rent</label>
                            <input type="number" name="rent" id="room-rent" value="<%= formData.rent || '' %>" required class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
                        </div>
                    </div>
                    <div>
                        <label for="room-occupancy" class="block text-sm font-medium text-gray-700">Occupancy Type</label>
                        <select name="occupancyType" id="room-occupancy" required class="mt-1 block w-full px-3 py-2 bg-white border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500">
                            <option value="single" <%= (formData.occupancyType == 'single') ? 'selected' : '' %>>Single</option>
                            <option value="double" <%= (formData.occupancyType == 'double') ? 'selected' : '' %>>Double</option>
                        </select>
                    </div>
                    <button type="submit" class="w-full bg-teal-600 text-white py-2 px-4 rounded-md hover:bg-teal-700">Add Room</button>
                </form>
            </div>
        </div>
    </div>
</main>

<%- include('partials/footer') %>